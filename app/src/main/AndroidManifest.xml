<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guideapp.guideapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme2" >
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.local.LocalActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.MapActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeMap" >
        </activity>
        <activity
            android:name=".ui.activities.SearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeSearch"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".ui.activities.LocalPhotoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemePhoto" >
        </activity>
        <activity
            android:name=".ui.activities.LocalDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeLocalDetail" >
        </activity>
        <activity
            android:name=".ui.activities.PhotoViewerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeGallery" >
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/title_activity_register" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCY6x2zng0ybKtkhoabhung3B2r5iSfJdA" />
    </application>

</manifest>
