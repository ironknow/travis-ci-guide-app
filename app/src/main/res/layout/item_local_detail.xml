<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/local_picture"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_location_on_black_24dp" />

    <TextView
        android:id="@+id/local_text"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/local_picture"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:paddingBottom="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding"
        android:textColor="@color/primary_text"
        tools:text="local_text" />

    <View
        android:id="@+id/local_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider"
        android:layout_alignStart="@+id/local_text"
        android:layout_below="@+id/local_text"
        android:background="@color/divider" />
</RelativeLayout>