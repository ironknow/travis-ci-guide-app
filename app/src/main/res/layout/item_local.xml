<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/local_ico"
        android:src="@drawable/gruta"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/local_favorite"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/local_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cachoeira da Gruta"
        android:textColor="@color/primary_text"
        android:id="@+id/local_text"
        android:layout_alignTop="@+id/local_ico"
        android:layout_toRightOf="@+id/local_ico"
        android:layout_toEndOf="@+id/local_ico"
        android:typeface="sans"
        android:fontFamily="sans-serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Complexo do claro"
        android:textColor="@color/secondary_text"
        android:id="@+id/local_address"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:background="@drawable/frame_rate"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="?android:attr/textAppearance"
        android:layout_below="@+id/local_text"
        android:layout_alignLeft="@+id/local_text"
        android:layout_alignStart="@+id/local_text"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/local_divider"
        android:visibility="gone"
        android:background="@color/divider_dark"
        android:layout_below="@+id/local_ico"
        android:layout_alignLeft="@+id/local_address"
        android:layout_alignStart="@+id/local_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Complexo do claro"
        android:textColor="@color/secondary_text"
        android:id="@+id/textView7"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/local_address"
        android:layout_toRightOf="@+id/local_ico"
        android:layout_toEndOf="@+id/local_ico"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5 OpiniÃµes"
        android:textColor="@color/secondary_text_light"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif-light"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp" />
</RelativeLayout>